{
   "compilerOptions": {
      "rootDir": "src",
      "declaration": true,
      "declarationDir": "build",
      "module": "esnext",
      "target": "es5",
      "removeComments": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true
   },
   "include": ["./src/*"],
   "exclude": ["node_modules", "build"]
}
